{
  "name": "opensea-api",
  "version": "1.0.0",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch --env-file=.env src/server.ts",
    "build": "tsup",
    "start": "node --env-file=.env build/server.js",
    "notifications:worker": "tsx --env-file=.env src/workers/notifications-scheduler.ts",
    "test": "vitest run --project unit",
    "test:e2e": "vitest run --project e2e",
    "test:watch": "vitest --project unit",
    "test:e2e:watch": "vitest --project e2e",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "prisma:reset": "npx prisma migrate reset --force",
    "prisma:seed": "tsx --env-file=.env prisma/seed.ts",
    "prisma:check-db": "tsx --env-file=.env prisma/check-db.ts",
    "prisma:clean": "tsx --env-file=.env prisma/clean-database.ts",
    "test:load": "k6 run tests/load/smoke.js",
    "test:load:smoke": "k6 run tests/load/smoke.js",
    "test:load:auth": "k6 run tests/load/scenarios/auth-flow.js",
    "test:load:products": "k6 run tests/load/scenarios/products-crud.js",
    "docker:build": "docker build -t opensea-api .",
    "docker:run": "docker run -p 3333:3333 --env-file .env opensea-api",
    "workers:start": "tsx --env-file=.env src/workers/index.ts"
  },
  "keywords": [
    "opensea",
    "inventory",
    "stock management",
    "sales",
    "api",
    "authentication",
    "auth",
    "fastify",
    "prisma",
    "typescript",
    "jwt",
    "security",
    "user management",
    "clean architecture"
  ],
  "author": "Guilherme Ganim",
  "license": "ISC",
  "description": "API completa para gest√£o de estoque e vendas com Clean Architecture, TypeScript e Fastify",
  "dependencies": {
    "@aws-sdk/client-s3": "3.986.0",
    "@aws-sdk/s3-request-presigner": "3.986.0",
    "@fastify/cookie": "11.0.2",
    "@fastify/cors": "11.1.0",
    "@fastify/helmet": "13.0.2",
    "@fastify/jwt": "9.1.0",
    "@fastify/multipart": "9.4.0",
    "@fastify/rate-limit": "10.3.0",
    "@fastify/swagger": "9.5.1",
    "@fastify/swagger-ui": "5.2.3",
    "@prisma/adapter-pg": "7.2.0",
    "@prisma/client": "7.2.0",
    "@sentry/node": "10.34.0",
    "bcryptjs": "3.0.2",
    "bullmq": "5.66.5",
    "cpf-cnpj-validator": "1.0.3",
    "dayjs": "1.11.13",
    "decimal.js": "10.6.0",
    "fastify": "5.4.0",
    "fastify-jwt": "4.1.3",
    "fastify-type-provider-zod": "5.0.3",
    "ioredis": "5.9.2",
    "nodemailer": "7.0.6",
    "opossum": "9.0.0",
    "pg": "8.13.1",
    "pino": "10.1.0",
    "pino-pretty": "13.1.2",
    "swagger-themes": "1.4.3",
    "uuid": "11.1.0",
    "zod": "4.0.2"
  },
  "devDependencies": {
    "@eslint/js": "9.30.1",
    "@faker-js/faker": "9.9.0",
    "@types/decimal.js": "0.0.32",
    "@types/ioredis": "4.28.10",
    "@types/node": "24.0.12",
    "@types/nodemailer": "7.0.1",
    "@types/opossum": "8.1.9",
    "@types/pg": "8.11.10",
    "@types/supertest": "6.0.3",
    "@types/uuid": "10.0.0",
    "@typescript-eslint/eslint-plugin": "8.36.0",
    "@typescript-eslint/parser": "8.36.0",
    "@vitest/coverage-v8": "3.2.4",
    "eslint": "9.30.1",
    "eslint-config-prettier": "10.1.5",
    "eslint-plugin-prettier": "5.5.1",
    "globals": "16.3.0",
    "prettier": "3.6.2",
    "prisma": "7.2.0",
    "supertest": "7.1.3",
    "tsup": "8.5.0",
    "tsx": "4.20.3",
    "typescript": "5.8.3",
    "typescript-eslint": "8.36.0",
